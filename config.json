{
  "source": ["input/transformed-tokens.json"],
  "platforms": {
    "scss": {
      "transformGroup": "custom/web",
      "buildPath": "output/css/",
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables"
      }]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "output/css/",
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables",
        "options": {
            "outputReferences": true
        }
      }]
    }
  }
}
